Screen
    figure_wgt:figure_wgt
    alter_lvl:alter_lvl
    noise_lvl:noise_lvl
    amount:amount

    BoxLayout:
        size_hint: 1,1
        orientation: "vertical"
        padding: 0
        spacing: 0
        BoxLayout:
            size_hint: 1,0.1
            orientation: "horizontal"
            padding: 0
            spacing: 0
            BoxLayout:
                size_hint: 0.8,1
                orientation: "vertical"
                padding: 0
                spacing: 0
            BoxLayout:
                size_hint: 0.2,1
                orientation: "vertical"
                padding: 0
                spacing: 0
                MDFlatButton:
                    size_hint: 0.6, 0.4
                    id: smoothing
                    text: 'Smoothing'
                    pos_hint: {'center_x': 0.7, 'center_y': 0.2}
                    on_release: app.smoothing()



        BoxLayout:
            size_hint: 1,0.7
            orientation: "horizontal"
            padding: 0
            spacing: 0
            BoxLayout:
                padding: 0
                size_hint: 1,1
                orientation: "vertical"
                MatplotFigure:
                    id:figure_wgt
        BoxLayout:
            size_hint: 1,0.2
            orientation: "horizontal"
            padding: 0
            spacing: 0
            BoxLayout:
                size_hint: 0.3,1
                orientation: "vertical"
                padding: 40
                spacing: 0
                Label:
                    text: f'Alteration lvl, mV:  {round(alter_lvl.value, 2)}'
                    font_size: 23
                    pos_hint: {'center_x': 0.41, 'center_y': 0.1}
                BoxLayout:
                    size_hint: 0.8,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0
                    MDSlider:
                        id: alter_lvl
                        min: -1
                        max: 1
                        pos_hint: {'center_x': 0.7, 'center_y': 1}
                        value: 0.5
                        step: 0.01
                        hint: False

            BoxLayout:
                size_hint: 0.4,1
                orientation: "horizontal"
                padding: 0
                spacing: 0

                BoxLayout:
                    size_hint: 0.4,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0
                    BoxLayout:
                        size_hint: 1,0.35
                        orientation: "vertical"
                        padding: 0
                        spacing: 0

                    BoxLayout:
                        size_hint: 1,0.3
                        orientation: "vertical"
                        padding: 0
                        spacing: 0
                        MDIconButton:
                            id: file
                            size_hint: 0.4,0.5
                            icon: 'arrow-left-bold-box.png'
                            md_bg_color: [1, 1, 1, 1]
                            pos_hint: {'center_x': 0.7, 'center_y': 0.5}
                            on_release: app.change_amount('left', '-1')
                    BoxLayout:
                        size_hint: 1,0.35
                        orientation: "vertical"
                        padding: 0
                        spacing: 0

                BoxLayout:
                    size_hint: 0.2,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0

                    BoxLayout:
                        size_hint: 1,0.3
                        orientation: "vertical"
                        padding: 0
                        spacing: 0

                    BoxLayout:
                        size_hint: 1,0.4
                        orientation: "horizontal"
                        padding: 0
                        spacing: 0

                        BoxLayout:
                            size_hint: 0.35,1
                            orientation: "vertical"
                            padding: 0
                            spacing: 0

                        BoxLayout:
                            size_hint: 0.3,1
                            orientation: "vertical"
                            padding: 0
                            spacing: 0
                            MDTextField:
                                id: amount
                                halign: 'center'
                                text: "10"
                                on_text: app.change_amount('entry', amount.text)

                        BoxLayout:
                            size_hint: 0.35,1
                            orientation: "vertical"
                            padding: 0
                            spacing: 0

                    BoxLayout:
                        size_hint: 1,0.2
                        orientation: "vertical"
                        padding: 0
                        spacing: 0

                BoxLayout:
                    size_hint: 0.4,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0


                    BoxLayout:
                        size_hint: 1,0.35
                        orientation: "vertical"
                        padding: 0
                        spacing: 0

                    BoxLayout:
                        size_hint: 1,0.3
                        orientation: "vertical"
                        padding: 0
                        spacing: 0
                        MDIconButton:
                            id: file
                            size_hint: 0.4,0.5
                            icon: 'arrow-right-bold-box.png'
                            md_bg_color: [1, 1, 1, 1]
                            pos_hint: {'center_x': 0.3, 'center_y': 0.5}
                            on_release: app.change_amount('right', '1')
        #                        on_release: root.dropdown_file()
                    BoxLayout:
                        size_hint: 1,0.35
                        orientation: "vertical"
                        padding: 0
                        spacing: 0
            BoxLayout:
                size_hint: 0.3,1
                orientation: "vertical"
                padding: 40
                spacing: 0
                Label:
                    text: f'Noise lvl, mV:  {round(noise_lvl.value, 2)}'
                    font_size: 23
                    pos_hint: {'center_x': 0.41, 'center_y': 0.1}
                BoxLayout:
                    size_hint: 0.8,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0
                    MDSlider:
                        id: noise_lvl
                        min: -0.1
                        max: 0.1
                        pos_hint: {'center_x': 0.7, 'center_y': 1}

                        value: 0
                        step: 0.001
                        hint: False

