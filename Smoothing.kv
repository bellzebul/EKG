<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(25), dp(25)


MDScreen:
    figure_wgt:figure_wgt
    alpha:alpha
    w_width:w_width
#    noise_lvl:noise_lvl
#    amount:amount

    BoxLayout:
        size_hint: 1,1
        orientation: "vertical"
        padding: 0
        spacing: 0
        BoxLayout:
            size_hint: 1,0.1
            orientation: "horizontal"
            padding: 0
            spacing: 0

        BoxLayout:
            size_hint: 1,0.7
            orientation: "horizontal"
            padding: 0
            spacing: 0
            BoxLayout:
                padding: 0
                size_hint: 1,1
                orientation: "vertical"
                MatplotFigure:
                    id:figure_wgt
        BoxLayout:
            size_hint: 1,0.2
            orientation: "horizontal"
            padding: 0
            spacing: 0
            BoxLayout:
                size_hint: 0.3,1
                orientation: "vertical"
                padding: 40
                spacing: 0
                Label:
                    text: f'Alpha param:  {round(alpha.value, 1)}'
                    font_size: 23
                    pos_hint: {'center_x': 0.41, 'center_y': 0.1}
                BoxLayout:
                    size_hint: 0.8,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0
                    MDSlider:
                        disabled: True
                        id: alpha
                        min: 0.01
                        max: 0.99
                        pos_hint: {'center_x': 0.76, 'center_y': 1}
                        value: 1
                        step: 0.01
                        hint: False


            BoxLayout:
                size_hint: 0.3,1
                orientation: "vertical"
                padding: 40
                spacing: 0
                Label:
                    text: f'Window width:  {round(w_width.value, 1)}'
                    font_size: 23
                    pos_hint: {'center_x': 0.37, 'center_y': 0.1}
                BoxLayout:
                    size_hint: 0.8,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0
                    MDSlider:
                        disabled: True
                        id: w_width
                        min: 1
                        max: 50
                        pos_hint: {'center_x': 0.76, 'center_y': 1}
                        value: 0
                        step: 1
                        hint: False


            BoxLayout:
                size_hint: 0.4,1
                orientation: "horizontal"
                padding: 10
                spacing: 0
                BoxLayout:
                    size_hint: 0.9,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0
                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: "horizontal"
                        padding: 30
                        spacing: 0
                        MDLabel:
                            halign: "right"
                            font_size: 28
                            text: "Exponential smoothing"
                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: "horizontal"
                        padding: 30
                        spacing: 0
                        MDLabel:
                            halign: "right"
                            font_size: 28
                            text: "Moving average"

                BoxLayout:
                    size_hint: 0.1,1
                    orientation: "vertical"
                    padding: 0
                    spacing: 0
                    BoxLayout:
                        size_hint: 1,0.5
                        orientation: "vertical"
                        padding: 10
                        spacing: 0
                        Check:
                            on_active: app.filter('Exponential')


                    BoxLayout:
                        size_hint: 1,0.5
                        orientation: "vertical"
                        padding: 10
                        spacing: 0
                        Check:
                            on_active: app.filter('Average')









